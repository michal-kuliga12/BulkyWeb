@model List<Category>
<partial name="_Notifications"/>
<div class="container">
	<div class="row pt-4 pb-3">
		<div class="col-6">
			<h2 class="text-primary">
				Category List
			</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Category" asp-action="Create" class="btn btn-primary">
				<i class="bi bi-plus"></i>Create new category
			</a>
		</div>
	</div>
</div>
<table class="table table-bordered table-striped">
	<thead>
		<tr>
			<th>
				Category Name
			</th>
			<th>
				Display Order
			</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var obj in Model.OrderBy(u=>u.DisplayOrder))
		{
			<tr>
				<td class="col-4">
					@obj.Name
				</td>
				<td class="col-4">
					@obj.DisplayOrder
				</td>
				<td class="col-4">
					<div class="btn-group w-100 gap-2">
						<a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.CategoryId" class="btn btn-primary d-flex gap-1 w-50">
							<i class="bi bi-pencil px-2"></i>Edit
						</a>
						<a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.CategoryId" class="btn btn-danger d-flex gap-1 w-50">
							<i class="bi bi-trash"></i>Delete
						</a>
					</div>
				</td>
			</tr>
		}
	</tbody>
</table>