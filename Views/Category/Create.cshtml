@model Category

<form method="post" asp-action="Edit">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create category</h2>
            <hr />
        </div>
        <div asp-validation-summary="None"></div>
        <div class="mb-3">
            <label asp-for="Name">Category name</label>
            <input asp-for="Name" class="form-control" value="" />
            <span asp-validation-for="Name" style="color:red;"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder">Display Order</label>
            <input asp-for="DisplayOrder" class="form-control" value="" />
            <span asp-validation-for="DisplayOrder" style="color:red"></span>
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Create</button>                
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary border form-control" >
                    Back to List
                </a>
            </div>
        </div>
    </div>
</form>